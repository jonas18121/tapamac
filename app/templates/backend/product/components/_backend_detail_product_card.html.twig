<section class="section_detail_product">
    <section class="detail_product">
        {% embed 'components/_base_detail_product_card.html.twig' 
            with {'product': product } 
            only
        %}
            {# Surcharge d'autres éléments/propriétés #}
            {% block surchargeOne %}
                <p>Prix : {{ product.price}} €</p>
                <p>{{ product.description}}</p>
                <p>Catégorie : {{ product.category.name}}</p>
                <p class=''>Date de création : {{ product.createdat | date('d/m/Y H:i') }}</p>
                <p class=''>Date de modification : {{ product.updatedat | date('d/m/Y H:i') }}</p>
                {% if product.deletedat is not defined %}
                    <p class=''>Date de fausse suppression : {{ product.deletedat | date('d/m/Y H:i') }}</p>
                {% endif %}
            {% endblock surchargeOne %}

            {# Surcharge d'autres éléments/propriétés #}
            {% block surchargeThree %}{% endblock surchargeThree %}
        {% endembed %}
    </section>
</section>