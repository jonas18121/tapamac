    </div>

    <div class="form-container">
        <div>
            <label for="inputTitle" class="form-label">Nom</label>
            {{ form_widget(formUser.lastName, {attr : {class : 'form-input' }} ) }}
        </div>
        <small class="error_input_small">{{ form_errors(formUser.lastName) }}</small>
    </div>

    <div class="form-container">
        <div>
            <label for="inputTitle" class="form-label">E-mail</label>
            {{ form_widget(formUser.email, {attr : {class : 'form-input' }} ) }}
